#!/bin/sh

# V√©rifie si des fichiers sont en staging
if git diff --cached --quiet; then
    echo "Aucun fichier √† commiter"
    exit 0
fi

# Variables de couleur
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m'

echo "üîç V√©rification du code..."

# V√©rifier le backend
cd backend || exit 1
if [ -f "package.json" ]; then
    echo "üìù Lint backend..."
    npm run lint
    if [ $? -ne 0 ]; then
        echo "${RED}‚ùå Erreurs de lint dans le backend${NC}"
        exit 1
    fi
fi

# V√©rifier le frontend
cd ../frontend || exit 1
if [ -f "package.json" ]; then
    echo "üìù Lint frontend..."
    npm run lint
    if [ $? -ne 0 ]; then
        echo "${RED}‚ùå Erreurs de lint dans le frontend${NC}"
        exit 1
    fi
fi

# V√©rifier qu'il n'y a pas de secrets ou mots de passe
if git diff --cached -U0 | grep -i "password\|secret\|key" > /dev/null; then
    echo "${RED}‚ùå Possible fuite de secrets d√©tect√©e. V√©rifiez votre code.${NC}"
    exit 1
fi

echo "${GREEN}‚úÖ V√©rifications r√©ussies${NC}"
exit 0